{
  "name": "@kozakl/components",
  "version": "0.0.1",
  "sideEffects": false,
  "author": {
    "name": "Luke Kozak",
    "email": "kozakluke@gmail.com",
    "url": "https://github.com/kozakl"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kozakl/react-components"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc && copyfiles -u 1 src/**/*.module.css dist/",
    "publish-dist": "npm run build && cp package.json ./dist && npm publish ./dist --access=public",
    "test": "jest --coverage",
    "test:watch": "npm run test -- --watchAll"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/src/.*.test)\\.tsx?$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ]
  },
  "dependencies": {
    "@kozakl/utils": "^8.0.1",
    "@types/draft-js": "^0.10.44",
    "@types/draftjs-to-html": "^0.8.0",
    "@types/html-to-draftjs": "^1.4.0",
    "draft-js": "^0.11.7",
    "draftjs-to-html": "^0.9.1",
    "html-to-draftjs": "^1.5.0"
  },
  "peerDependencies": {
    "@types/react": "^17.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "copyfiles": "^2.4.1",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  }
}
